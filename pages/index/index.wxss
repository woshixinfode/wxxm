@import '../../components/tally-cell.wxss';

/**index.wxss**/
page {
  background-color: #F6F6F6;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

.userinfo-nickname {
  color: #aaa;
}

.money-text {
  font-size: 14px;
  margin-top: 10rpx;
}

.add-button {
  font-size: 16px;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background-color: #ff0;
  display: flex;
  align-items: center;
  justify-content: center;
}